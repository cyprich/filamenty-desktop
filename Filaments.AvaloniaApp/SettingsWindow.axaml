<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="300" d:DesignHeight="450"
        x:Class="Filaments.AvaloniaApp.SettingsWindow"
        Title="Settings"
        Width="300"
        Height="450">
    <Grid Margin="16"
        ColumnDefinitions="Auto  *" 
        RowDefinitions="Auto Auto Auto Auto Auto Auto Auto Auto * Auto">

        <ItemsControl></ItemsControl>

        <TextBlock Grid.Row="0" Grid.Column="0"  Grid.ColumnSpan="2"
			Text="Database Settings" FontSize="20" FontWeight="Bold" Margin="0 0 0 8"/>

		<TextBlock Grid.Row="1" Grid.Column="0" Text="Username" VerticalAlignment="Center"/>
        <TextBox Grid.Row="1" Grid.Column="1" Margin="8 4"/>

		<TextBlock Grid.Row="2" Grid.Column="0" Text="Password" VerticalAlignment="Center"/>
        <TextBox Grid.Row="2" Grid.Column="1" Margin="8 4"/>

		<TextBlock Grid.Row="3" Grid.Column="0" Text="URL or address" VerticalAlignment="Center"/>
        <TextBox Grid.Row="3" Grid.Column="1" Margin="8 4"/>

		<TextBlock Grid.Row="4" Grid.Column="0" Text="Port" VerticalAlignment="Center"/>
        <TextBox Grid.Row="4" Grid.Column="1" Margin="8 4"/>

		<TextBlock Grid.Row="5" Grid.Column="0" Text="Name" VerticalAlignment="Center"/>
        <TextBox Grid.Row="5" Grid.Column="1" Margin="8 4"/>

        <StackPanel Grid.Row="6" Grid.Column="0" Grid.ColumnSpan="2" Orientation="Horizontal">
            <CheckBox/>
            <TextBlock Text="Remember settings" VerticalAlignment="Center"/>
        </StackPanel>

        <Button Grid.Row="7" Grid.Column="0" Grid.ColumnSpan="2" Content="Test connection" 
                HorizontalAlignment="Center" Margin="0 8 0 0"/>
        
        <StackPanel Grid.Row="9" Grid.Column="0" Grid.ColumnSpan="2" Orientation="Horizontal" HorizontalAlignment="Center">
            <Button Content="Save" Margin="0 0 8 0"/>
            <Button Content="Cancel"/>
        </StackPanel>
    </Grid>
</Window>
